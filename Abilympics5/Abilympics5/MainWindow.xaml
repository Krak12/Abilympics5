        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="673.734" FontSize="20" FontFamily="Comic Sans MS">
    <Grid Margin="0,0,2,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="241"/>
            <ColumnDefinition Width="551"/>
        </Grid.ColumnDefinitions>
        <Label Content="Авторизация" Grid.Column="1" HorizontalAlignment="Left" Margin="146,23,0,0" VerticalAlignment="Top" RenderTransformOrigin="-3.079,1.192"/>
        <Grid HorizontalAlignment="Left" Height="419" VerticalAlignment="Top" Width="241" Background="Blue">
            <Image VerticalAlignment="Top" Source="D:\c#\Снимок.PNG"/>
        </Grid>
        <Label Content="Для продолжения работы, пожалуйста, авторизируйтесь" Grid.Column="1" HorizontalAlignment="Left" Margin="10,66,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.342,0.269" FontSize="14"/>
